{
  "name": "money-works",
  "description": "Work with money in multiple currencies",
  "homepage": "https://github.com/richardschneider/money-works",
  "bugs": "https://github.com/richardschneider/money-works/issues",
  "license": "MIT",
  "main": "index.js",
  "browser": {
    "index.js": "browser.js",
    "./lib/secure-json.js": "./browser/secure-json.js",
    "intl": false
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "author": {
    "name": "Richard Schneider",
    "email": "makaretu@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/richardschneider/money-works"
  },
  "keywords": [
    "money",
    "currency",
    "forex",
    "conversion",
    "fiat",
    "moolah",
    "i18n",
    "internationalization",
    "internationalisation",
    "10n",
    "localization",
    "localisation",
    "locale",
    "math",
    "accounting"
  ],
  "dependencies": {
    "big.js": "^5.1.0",
    "intl": "^1.2.5",
    "memoize-immutable": "^2.1.0"
  },
  "devDependencies": {
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.14.0",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "deploy-to-git": "0.1.1",
    "glob": "^7.0.6",
    "gulp": "^3.9.1",
    "gulp-coveralls": "^0.1.4",
    "gulp-jshint": "^2.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-spawn-mocha": "^5.0.0",
    "gulp-uglify": "^3.0.0",
    "istanbul": "^0.4.5",
    "jshint": "^2.9.2",
    "jshint-stylish": "^2.2.0",
    "mocha": "*",
    "semantic-release": "^15.6.0",
    "should": "*",
    "validate-commit-msg": "^2.6.1",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "travis-deploy-once": "^5.0.0"
  },
  "config": {
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    },
    "deployToGit": {
      "repository": "https://$GH_TOKEN@github.com/richardschneider/money-works",
      "branch": "gh-pages",
      "folder": "site",
      "script": "gulp site",
      "commit": "chore(site): publish $npm_package_version",
      "user": {
        "email": "noreply@emanon.org",
        "name": "CI Travis"
      }
    }
  },
  "scripts": {
    "test": "gulp test",
    "deploy-site": "deploy-to-git",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once"
  },
  "version": "0.0.0-development"
}
